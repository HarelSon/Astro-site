---
import Icon from 'astro-icon';
---

<div class="rounded-2xl grid grid-cols-2 mt-1.5">
  <div class="box1">
    <h4 class="title">NATIONAL PENSION SCHEME</h4>

    <h2 class="text-6xl font-bold leading-[1.15rem]">
      A happier <span class="text-purple-800">tomorrow</span> <br />
      A happier <span class="text-purple-800">today</span>
    </h2>
    
    <p>
      Invest in the National Scheme to save <br /> for your retirement and save on
      tax today
    </p>

    <div class="tag">
      <Icon name="lock-solid" /> NPS POP REG NO 1614858
    </div>
  </div>

  <div class="box2">
    <img class="img" src="/public/img.jpg" alt="" />
  </div>
</div>

<style>
  .box1 {
    margin-left: 150px;
  }

  .img {
    height: 228px;
    width: 390px;
  }

  .title {
    color: #8891ab;
    font-size: 12px;
    font-weight: bold;
  }

  .text-purple {
    color: #5c59c3;
  }

  .tag {
    width: 240px;
    height: 22px;
    background-color: #eff8f7;
    border-radius: 4px;
    display: flex;
    margin-top: 10px;
    padding-top: 2px;
    padding-rigth: 12px;
    cursor: pointer;
    color: green;
    font-size: 13px;
  }

  .tag:hover {
    background-color: green;
    color: #eff8f7;
  }

  .fa-lock {
    margin-left: 20px;
  }
</style>
