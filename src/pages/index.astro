<style>

.menu-0 {
  display: flex;
  margin-left: 44rem;
  margin-top: 5px;
  
}

.menu {
  
  font-weight: bold;
  width: 75px;
  text-align: center;
  font-size: 13px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
}

.menu:hover {
  color: green;
  
}

.fa-solid {
  margin-right:25px;
  margin-top: 3px;
}

.box {
  
    
    border-radius: 15px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-top: 5px;
    
}

.box1 {
  margin-left: 150px;
}

.img {
  height: 228px;
  width: 390px;
}

.title {
  color: #8891ab;
  font-size:12px;
  font-weight: bold;
  
}

.text-black {
  font-weight: bold;
  font-size: 48px;
}
.text-purple {
  color: #5c59c3;
  font-weight: bold;
  font-size: 48px;
}

.tag {
  
    
    width: 240px;
    height: 22px;
    background-color: #eff8f7;
    border-radius: 4px;
    display: flex;
    margin-top: 10px;
    padding-top:2px;
    padding-rigth: 12px;
    cursor: pointer;
    color: green;
    font-size: 13px;
}

.tag:hover{
  
  background-color: green;
  color: #eff8f7;
}

.fa-lock {
  margin-left: 20px;
}

</style>
